{
  "name": "eth.wouterds.be",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:remix && npm run build:server",
    "build:remix": "remix vite:build",
    "build:server": "esbuild src/server.ts --platform=node --outdir=build",
    "dev": "tsx src/server.ts",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint ./src",
    "lint:fix": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --fix ./src",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/express": "^2.12.1",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@uidotdev/usehooks": "^2.4.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "ethers": "^6.13.2",
    "express": "^4.21.0",
    "isbot": "^5.1.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@remix-run/dev": "^2.12.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.24.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lefthook": "^1.7.15",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": "^20.0.0",
    "npm": "^10.8.0"
  },
  "packageManager": "npm@10.8.2"
}
